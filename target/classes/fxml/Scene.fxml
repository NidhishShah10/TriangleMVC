<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.openjfx.FXMLController"
      spacing="10" alignment="CENTER"
      style="-fx-padding: 20;">

    <Label text="Enter Triangle Dimensions"/>
    <TextField fx:id="baseField" promptText="Base"/>
    <TextField fx:id="heightField" promptText="Height"/>
    <Button text="Update Triangle" onAction="#handleUpdateAction"/>
    <Label fx:id="hypotenuseLabel" text="Hypotenuse: "/>
</VBox>
